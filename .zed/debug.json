[
  {
    "label": "Debug com Make",
    "adapter": "CodeLLDB",
    "request": "launch",
    "build": {
      "command": "make",
      "args": ["-j8"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/seu_executavel",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Debug bin√°rio existente",
    "adapter": "CodeLLDB",
    "request": "launch",
    "program": "$ZED_WORKTREE_ROOT/caminho/para/seu_executavel",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
      "label": "Debug arquivo atual (C)",
      "adapter": "CodeLLDB",
      "request": "launch",
      "build": {
        "command": "gcc",
        "args": ["-g", "$ZED_FILE", "-o", "/tmp/zed_run_c"]
      },
      "program": "/tmp/zed_run_c",
      "cwd": "$ZED_WORKTREE_ROOT"
    }
]
